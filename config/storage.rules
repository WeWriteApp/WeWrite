rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access to all files (for background images)
    match /{allPaths=**} {
      allow read: if true;
    }

    // Allow authenticated users to upload background images to their own folder
    match /backgrounds/{userId}/{fileName} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow admins to upload default background images
    match /backgrounds/defaults/{fileName} {
      allow write: if request.auth != null && (
        request.auth.token.email == 'jamiegray2234@gmail.com' ||
        request.auth.token.email == 'contact@jamiegray.net' ||
        request.auth.token.email == 'jamie@wewrite.app' ||
        request.auth.token.email == 'test1@wewrite.dev'
      );
    }

    // Deny all other write access
    match /{allPaths=**} {
      allow write: if false;
    }
  }
}
